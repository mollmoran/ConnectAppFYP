<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/btnInputReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnViewReminders"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/custom_button"
        android:padding="30dp"
        android:text="Input Reminders"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnViewReminders"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="192dp"
        android:background="@drawable/custom_button"
        android:padding="30dp"
        android:text="View Reminders"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnInputReminder"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="139dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/custom_button"
        android:padding="30dp"
        android:text="Send a Message"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnViewMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSendMessage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/custom_button"
        android:padding="30dp"
        android:text="View Messages"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnViewMessages"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button"
        android:padding="30dp"
        android:text="News"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="481dp"
        android:background="@drawable/custom_button"
        android:padding="30dp"
        android:text="Weather"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnUserView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="214dp"
        android:background="@drawable/custom_button"
        android:padding="30dp"
        android:text="UserView"
        android:textColor="@android:color/white" />

</RelativeLayout>